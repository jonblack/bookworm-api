source 'https://rubygems.org'

# web
gem 'sinatra'
gem 'sinatra-contrib'
gem 'puma'

# hypermedia
gem 'roar'
gem 'multi_json'

# database
gem 'sinatra-activerecord'
gem 'rake'
gem 'pg'

# auth
gem 'bcrypt'

group :development do
  gem 'rerun'
  gem 'rubocop', require: false
end

group :test do
  gem 'cucumber'
  gem 'database_cleaner'
  gem 'json'
  gem 'rack-test'
  gem 'rspec-expectations'
end
